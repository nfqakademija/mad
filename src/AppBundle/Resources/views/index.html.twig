{% extends "::base.html.twig" %}
{% block body %}
    <div id="fullpage">
        <div class="section wallpaper">
            {% include "AppBundle:Components:intro.html.twig" %}
        </div>
        <div class="section">
            {% include "AppBundle:Components:steps.html.twig" %}
        </div>
        <div class="section fp-normal-scroll">
            {% include "AppBundle:Components:menu.html.twig"  with {'navBar': navBar} %}

        </div>
        {% block modals %}
            {% include "AppBundle:Components:menuComponents/calCalculator.html.twig"%}
        {% endblock %}

        <div id="modal2" class="modal my-modal">
            <div class="modal-content">
                <div class="container">
                    <h1 class="change-title">Pasikeiskite receptą</h1>
                    <nav class="meal-search">
                        <div class="nav-wrapper">
                            <form>
                                <div class="input-field">
                                    <input id="search-meal" type="search" required placeholder="Ieškokite recepto">
                                    <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                                    <i class="material-icons">close</i>
                                </div>
                            </form>
                        </div>
                    </nav>
                    <div class="row">
                        <div class="search-result">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="modal4" class="modal my-modal">
            <div class="modal-content">
                <div class="container">
                    <div class="row">
                            <h2 class="basket">Jūsų pirkinių sąrašas</h2>
                            <div class="basketInner">
                                <ol id="basket">
                                </ol>
                            <div class="end">
                                <h3 class="end">Skanaus!</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


{% endblock %}
